@model TaskManager.Models.BadgeModel
<a href="@Url.Action("Index", "MasterChief")">
    @if (Model.Count > 0)
    {
        <span id="new-users-count-id" class="badge pull-right">@Model.Count</span>
    }
    Контроль выполнения
</a>
@if (Model.IsPlay)
{
    <script type="text/javascript">
        $(document).ready(function () {
            $.playSound('@Url.Content("~/Media/NewTask")');
        });
    </script>
}
